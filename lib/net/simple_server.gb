module Net
  class SimpleServer
    attr_reader "port"
    attr_accessor "file_root"

    def initialize(port)
      @port = port
    end

    def get(path)
      mount(path, "GET") do |req, res|
        yield(req, res)
      end
    end

    def post(path)
      mount(path, "POST") do
        yield(req, res)
      end
    end
  end
end
