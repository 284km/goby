module Net
  class HTTP
    class Request
      attr_accessor :method, :protocol, :body, :content_length, :transfer_encoding, :host, :path, :url
      attr_reader   :headers

      def set_header(key, value)
        if !@headers
          @headers = {}
        end
        @headers[key] = value
      end

      def get_header(key)
        return @headers[key]
      end

      def delete_header(key)
        # @headers.delete(key)
      end
    end
  end
end

